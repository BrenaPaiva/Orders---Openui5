<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{i18n>title}">
		<content>
			<Table id="idOrdersTable">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="Orders"/>
					<SearchField width="20%"/>
					<Button tooltip="Sort" icon="sap-icon://sort"/>
					<Button tooltip="Mais antigos" icon="sap-icon://group-2"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="ID da venda"/>
					</Column>
					<Column>
						<Text text="Nome do cliente"/>
					</Column>
					<Column>
						<Text text="Status"/>
					</Column>
					<Column>
						<Text text="Valor bruto"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectIdentifier title="1"/>
							<Text text="Nome do cliente 1"/>
							<ObjectStatus text="Completado" icon="sap-icon://status-completed" state="Success"/>
							<ObjectNumber number="199" unit="USD"/>
						</cells>
					</ColumnListItem>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectIdentifier title="1"/>
							<Text text="Nome do cliente 1"/>
							<ObjectStatus text="Completado" icon="sap-icon://status-completed" state="Success"/>
							<ObjectNumber number="587" unit="USD"/>
						</cells>
					</ColumnListItem>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectIdentifier title="1"/>
							<Text text="Nome do cliente 1"/>
							<ObjectStatus text="Incompleto" icon="sap-icon://status-error" state="Error"/>
							<ObjectNumber number="234" unit="USD"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>